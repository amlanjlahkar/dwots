# custom mappings
map <C-Space> reload

# options
set selection-clipboard         "clipboard"

# appearance
# colors are taken from the zenbones color palette for vim
set font "Inter Regular 10"
set default-bg "#1c1917"
set default-fg "#b4bdc3"
set inputbar-bg "#14100d"
set inputbar-fg "#b4bdc3"
set statusbar-bg "#14100d"
set statusbar-fg "#b4bdc3"

set completion-bg "#14100d"
set completion-fg "#b4bdc3"
set completion-group-bg "#403833"
set completion-group-fg "#b4bdc3"
set completion-highlight-bg "#b77e64"
set completion-highlight-fg "#1c1917"

set index-bg "#1c1917"
set index-fg "#b4bdc3"
set index-active-bg "#b77e64"
set index-active-fg "#1c1917"

set recolor-darkcolor "#b4bdc3"
set recolor-lightcolor "#1c1917"
set render-loading true
set recolor-keephue false
