# Programs
alt - return : open -n /Applications/Wezterm.app
alt + shift - o : export MOZ_DISABLE_SAFE_MODE_KEY=1; open /Applications/Firefox.app
alt - s : open /System/Applications/Music.app

# Yabai
alt - j : yabai -m window --focus next || yabai -m window --focus first
alt - k : yabai -m window --focus prev || yabai -m window --focus last

alt + shift - j : ~/.config/yabai/scripts/yabai_swap_win
alt + shift - k : ~/.config/yabai/scripts/yabai_swap_win_anti

alt + ctrl - n : yabai -m space --create
alt - 0x21 : yabai -m space --focus prev || yabai -m space --focus last
alt - 0x1E : yabai -m space --focus next || yabai -m space --focus first
alt - 0x30 : yabai -m space --focus recent

alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4

alt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
alt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
alt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
alt + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4

:: yabai_resize
alt - y ; yabai_resize
yabai_resize < alt - y ; default

yabai_resize < h : yabai -m window --resize right:-20:0
yabai_resize < l : yabai -m window --resize right:20:0
yabai_resize < j : yabai -m window --resize bottom:0:20
yabai_resize < k : yabai -m window --resize bottom:0:-20

alt - p : yabai -m window --toggle split
alt - z : yabai -m window --toggle zoom-fullscreen
alt - l : yabai -m window --toggle float --grid 4:4:1:1:2:2

alt + shift - s : yabai -m window --toggle sticky
alt + shift - 0 : yabai -m space --balance

# Process maps
cmd - j [
    "firefox" : skhd -k "cmd + alt - right"
]

cmd - k [
    "firefox" : skhd -k "cmd + alt - left"
]


# vim: ft=conf
