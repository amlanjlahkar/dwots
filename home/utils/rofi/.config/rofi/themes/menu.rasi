/* A vertical-menu layout for rofi.
 * configuration manual: https://www.mankier.com/5/rofi-theme#
 */

* {
    background-color:               #faf4ed;
    border-color:                   #f2e9e1;
    text-color:                     #9893a5;
    font:                           "Inter Regular 9";
    prompt-font:                    "Inter Regular 9";
    prompt-border:                  #31748f;
    selected-normal-background:     #f2e9e1;
    selected-normal-foreground:     #575279;
    selected-active-background:     #d7827e;
    selected-active-foreground:     #575279;
}

#window {
    background-color: @background-color;
    transparency: "real";
    anchor: north;
    location: north;
    y-offset: 0px 0px 0px 0px;
    width: 100%;
    padding: 10px;
    border: 0px 0px 1px 0px;
    children: [mainbox];
    orientation: horizontal;
}

#mainbox {
    spacing: 0;
    children: [inputbar, listview];
}

#inputbar {
    padding: 0px 0px 10px 0px;
    border: 0px 0px 1px 0px;
    border-color: @border-color;
    background-color: rgba(0,0,0,0);
}

/* content under the inputbar */
#prompt {
    font: @prompt-font;
    text-color: @background-color;
    padding: 4px 10px 4px 10px;
    background-color: @prompt-border;
    border: 1px;
    border-color: @prompt-border;
}

#entry {
    text-color: @selected-normal-foreground;
    padding: 5px;
    expand: false;
    width: 10em;
}

#listview {
    padding: 10px 0px 0px 0px;
    layout: vertical;
    dynamic: true;
    background-color: rgba(0,0,0,0);
}

#element {
    padding: 3px 0px 3px 10px;
    background-color: transparent;
    border-radius: 2px;
}
    element-text {
        background-color: inherit;
        text-color:       inherit;
    }

    #element selected {
        background-color: @selected-normal-background;
        text-color: @selected-normal-foreground;
    }
        #element selected.active {
            background-color: @selected-active-background;
            text-color: @selected-active-foreground;
        }
