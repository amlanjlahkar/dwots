#!/usr/bin/env bash

# simple script for taking screenshot.
# dependencies: scrot, libnotify, dunst(or any other notification daemon)

# change the filename format and destination path according to your preference.
dest_path="${HOME}/pictures/screenshots/"
[ ! -d "$dest_path" ] && mkdir -p "${HOME}"/pictures/screenshots

scrot -q 100 --delay 3 "${dest_path}/%Y-%m-%d_%I%M%S%p.png" && \
    notify-send -t 3000 "ðŸ“¸ Screenshot Taken!" "screenshot saved to ${dest_path/${HOME}\/}"

