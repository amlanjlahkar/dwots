#!/bin/sh

# simple script that allows changing of wallpaper through rofi(or dmenu).
# dependencies: xwallpaper, rofi or dmenu, libnotify(optional), dunst(or any other notification daemon)(optional)

# the default path to save wallpaper to.
wall="${HOME}/.config/wallpaper.png"

# I save all my wallpapers under the below defined path.
# you should change it to where you usually store you wallpapers.
selected="$(basename -a ${HOME}/pictures/wallpapers/* | rofi -dmenu -l 20 -i -p " select an image ")"
if [ -z "$selected" ]; then
    exit 1
else
    cp "${HOME}"/pictures/wallpapers/"${selected}" "${wall}" && \
        xwallpaper --zoom "${wall}" && notify-send -t 5000 "Wallpaper set successfully!"
fi
