#!/usr/bin/env bash

capacity="$(cat /sys/class/power_supply/BAT1/capacity)"
stat="$(cat /sys/class/power_supply/BAT1/status)"

case "$stat" in
    'Charging')
        printf "%s\n" "Bat: ${capacity}%(charging)" ;;
    'Discharging')
        printf "%s\n" "Bat: ${capacity}%" ;;
    'Full')
        printf "%s\n" "Bat: Charged" ;;
esac

