# dark color scheme for zathura reader

set font "Input Sans Condensed 9"
set completion-group-bg         "#212121" # dark00
set completion-group-fg         "#c0c0c0" # white02
set completion-bg               "#323232" # dark01
set completion-fg               "#c0c0c0" # white02
set completion-highlight-bg     "#215d9c" # blue-alter
set completion-highlight-fg     "#f6f5f4" # white00

# Define the color in index mode
set index-bg                    "#323232" # dark01
set index-fg                    "#c0c0c0" # white02
set index-active-bg             "#215d9c" # blue-alter
set index-active-fg             "#f6f5f4" # white00

set inputbar-bg                 "#212121" # dark00
set inputbar-fg                 "#f6f5f4" # white00

set statusbar-bg                "#323232" # dark01
set statusbar-fg                "#c0c0c0" # white02

set highlight-color             "#999999" # white01
set highlight-active-color      "#e5a50c" # yellow02

set default-bg                  "#212121" # dark00
set default-fg                  "#c0c0c0" # white02

# Recolor book content's color
set recolor                     true
set recolor-lightcolor          "#212121" # dark00
set recolor-darkcolor           "#f6f5f4" # white00
set recolor-keephue             true      # keep original color
