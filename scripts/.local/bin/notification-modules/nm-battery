#!/bin/sh
    
capacity="$(cat /sys/class/power_supply/BAT1/capacity)"
stat="$(cat /sys/class/power_supply/BAT1/status)"

[ "${stat}" = "Charging" ] && printf "%s\n" "Bat: ${capacity}%(charging)" || printf "%s\n" "Bat: ${capacity}%"

