set completion-highlight-fg     "#343a40"

# Define the color in index mode
set index-bg                    "#ced4da"
set index-fg                    "#495057"
set index-active-bg             "#a4c3b2"
set index-active-fg             "#343a40"

set inputbar-bg                 "#e9ecef"
set inputbar-fg                 "#343a40"

set statusbar-bg                "#ced4da"
set statusbar-fg                "#495057"

set highlight-color             "#4d4e4c"
